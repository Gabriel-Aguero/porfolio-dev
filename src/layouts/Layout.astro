---
import "@/styles/global.css";
import GradientOverlay from "@/components/GradientOverlay.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Portfolio personal de Gabriel Agüero</title>
    <meta name="description" content="Portfolio de Gabriel Agüero, desarrollador frontend especializado en salud e informática." />
    <meta name="theme-color" content="#0f172a" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://devgaby.dev" />

    <!-- Open Graph -->
    <meta property="og:url" content="https://devgaby.dev" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Portfolio personal de Gabriel Agüero" />
    <meta property="og:description" content="Gabriel Agüero desarrollador web" />
    <meta property="og:image" content="/og-image.jpg" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@gabyaguero" />
    <meta name="twitter:creator" content="@gabyaguero" />
    <meta name="twitter:title" content="Portfolio personal de Gabriel Agüero" />
    <meta name="twitter:description" content="Gabriel Agüero desarrollador web" />
  </head> 
  <body>
    <div class="relative min-h-screen">
      <GradientOverlay />
      <div class="relative z-10">
        <slot />
      </div>
    </div>
  </body>
</html>

<style is:global>
  body {
    margin: 0;
    font-family: system-ui, sans-serif;
    background-color: #000; /* color claro por defecto */
    transition: background-color 0.3s, color 0.3s;
  }

</style>
