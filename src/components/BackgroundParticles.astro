---
import Particles from "astro-particles";
import type { ISourceOptions } from "tsparticles-engine";

const options: ISourceOptions = {
  background: {
    color: { value: "#0f172a" }, // fondo oscuro
  },
  fullScreen: { zIndex: -1 },
  particles: {
    number: {
      value: 400,
      density: { enable: true, area: 800 },
    },
    color: { value: "#f38bdf8" }, //#38bdf8
    shape: { type: "circle" },
    opacity: { value: 0.6 },
    size: { value: { min: 1, max: 3 } },
    move: {
      enable: true,
      speed: 2,
      direction: "none",
      random: false,
      straight: false,
      outModes: { default: "out" },
    },
    links: {
      enable: true,
      distance: 150,
      color: "#38bdf8",
      opacity: 0.4,
      width: 1,
    },
  },
  interactivity: {
    events: {
      onHover: { enable: true, mode: "repulse" },
      onClick: { enable: true, mode: "push" },
    },
    modes: {
      repulse: { distance: 100 },
      push: { quantity: 3 },
    },
  },
  detectRetina: true,
};
---

<Particles
  id="tsparticles"
  options={options}
  init="particlesInit"
  loaded="particlesLoaded"
  client:load
/>

<script>
  import { loadFull } from "tsparticles";

  if (typeof window !== "undefined") {
